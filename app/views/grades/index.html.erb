
<head>
<style>
#customers {
  
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #b00;
  color: white;
}
* {
  box-sizing: border-box;
}

/* Create two equal columns that floats next to each other */
.column {
  float: left;
  width: 50%;
  padding: 10px;
  height: 300px; /* Should be removed. Only for demonstration */
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
</style>
</head>

      <div class="content-wrapper">
  <div class="row">

    <div class="col-lg-12 d-flex grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between">
                      <h4 class="card-title mb-3"> Grades</h4>
   
                    </div>

                    <div class="table-responsive">
                      <table class="table">
    <tr>
      <th>Class results</th>
      <th>Exam results</th>
      <th>Student</th>
      <th>Total resullts</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.class_results %></td>
        <td><%= grade.exam_results %></td>
        <td style= "color: red"><%= grade.student.first_name %> <%= grade.student.last_name %></td>
        <td><%= grade.total_resullts %></td>
        <td><%= grade.subject_master.name %></td>
         <td> <%= link_to "Delete", grade_path(grade, student_id: grade.student_id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>

      
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
  <div class="column">
  <%= link_to "Print  Report", 
  report_path( format: "pdf", id:@student_id),
  target: "_blank",
  class: "btn btn-outline-danger" %>
  </div>
  <% if @student.email.present? && @student.parent_name.present? %>
  <div class="column">
  <%= link_to "Send Email", 
  send_email_path( id:@student_id),
  class: "btn btn-outline-info" %>
  <%else %>

    <% end %>

 </div>
                  </div>
                </div>
              </div>
                </div>
</div>


