<style>
  .blocktext {
      margin-left: auto;
      margin-right: auto;
  
      margin: 0;
    position: relative;
    left: 50%;
    margin-right: -50%;
  }
</style>

    
 <div class="content-wrapper">
  <div class="row">
              
              <div class="col-lg-12 d-flex grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between">
                      <h4 class="card-title mb-3">Upload Lesson Documents</h4>
                    </div>

  <div class="table-responsive">
                      <table class="table">
                  <thead>
                    <tr>
                      
                      <th>Uploaded By </th>
                      <th>Created At</th>
                      <th></th>
                      
                    </tr>
                  </thead>
                  <tbody>
                    <% count=1 %>
                    <% @misc_uploads.each do |misc_upload| %>
                      <tr>
                        <td><%= misc_upload.full_name %></td>
                        <td><%= misc_upload.created_at.strftime("%B %d, %Y %H:%M") %></td>
                      
                        <% if misc_upload.avafile.attached? %>
                        <td class='"btn btn-warning"'>
                          <%= link_to "View Lesson Note", rails_blob_path(misc_upload.avafile, disposition: "attachment") %>
                          
                        </td>
                      </tr>
                    <% end %>
                    <% end %>
                  </tbody>
                </table>
                
                  <center style="margin-top: 5%;">
                  <%= link_to 'Upload Document', uploadingmisc_path(:id => @patient_id ),{:remote => true, :class => "btn btn-primary btn-sm",'data-toggle' =>  "modal",'data-target' => '#myModal10'} %></td>
                  </center>
                
                  </div>
                              </div>
                  </div>
                </div>
              </div>
            </div>
       
     
      

      
      <div id="myModal10" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content" >
            <div class="modal-header">
            <h2> Upload Document</h2>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">close</h4>
            </div>
            <div class="modal-body" id = 'dis'>
              <%= render "uploadingmisc" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
