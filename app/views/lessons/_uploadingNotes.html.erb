<div class="table-agile-info">
  <%= simple_form_for (@note_upload) do |f| %>
    <div class="container">
      <fieldset>
        <div class="row2">
          <div class="col-md-6">
            
            <div class="ggg">
              <%= f.label :File,:label=> "Upload File" %>
              <br>
              <%= f.file_field :avafile,  class: "form-control" %>
            </div>
            <br>
           
             
             
              <div class="form-inputs">
                <%= f.input :user_id, :as=> :hidden, input_html: {value: current_user.id} %>
              </div>
                <div class="form-inputs">
                <%= f.input :lesson_id,:as=> :hidden, input_html: {value: @lesson_id} %>
              </div>
                 <div class="form-inputs">
                <%= f.input :subject_id, :as=> :hidden,input_html: {value: @subject_id} %>
              </div>
             
              <div class="col-md-5 col-md-offset-1">
                <%= f.button :submit,"Submit", :class => 'btn-success',:style=>"width:auto;" %>
              </div>
            </div>
          </div>
        </fieldset>
      </div>
 
  <% end %>
</div>
