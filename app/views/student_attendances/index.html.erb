
 <div class="content-wrapper">
  <div class="row">
              
              <div class="col-lg-12 d-flex grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between">
                      <h4 class="card-title mb-3">Students in my class</h4>
                    </div>
  <%= simple_form_for(@student_attendance) do |f| %>
                    <div class="table-responsive">
                      <table class="table">

                                <thead>
                                    <tr>

                                        <th scope="col">Name</th>
                                        <th scope="col">Class</th>
                                        <th scope="col">Mark As Present</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>


                                    </tr>
                                </thead>
                                <tbody>

                                      <% @students.each do |student| %>
      <tr scope="row">





        <td ><%= student.first_name + " " +student.last_name %></td>



        <td ><%= student.a_class.name if student.a_class %></td>
       <td><%= check_box_tag ("check_box[id][]"),checked_value = student.id %> </td>
      
   





      </tr>
    <% end %>

                                </tbody>
                            </table>
                           </div>
                  </div>
                </div>
              </div>
            </div>
                         <div class="form-actions">
            <%= f.button :submit, "Submit Attendance",class: 'btn btn-primary', data: {"disable-with": "Recording......"} %>
          </div>
          </div>

        

                  
    <% end %>           