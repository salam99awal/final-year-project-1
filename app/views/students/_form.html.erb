

                            <div class="content-wrapper">
  <div class="row">
              
              <div class="col-lg-8 d-flex grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between">
                      <h4 class="card-title mb-3">Student Information</h4>
                    </div>
  


   <%= form_with(model: student, local: true,class: "new_student" ) do |f| %>


       <span class="span-sub-heading"><span style="font-weight: 900; font-size: 30px">STUDENT DETAILS</span>
      <hr class="sub-heading">

      <div class="label-field-pair">
        <label for="student_grade">First Name<span class="necessary-field">*</span> </label>
        
        <div class="col-12 col-md-6">
      
         <%= f.text_field :first_name, required: true,class: "form-control" %>
        
        </div>
      </div>

  <br>

      <div class="label-field-pair">
        <label for="student_grade">Middle Name</label>
      <div class="col-12 col-md-6">
        
        <%= f.text_field :middle_name,class: "form-control" %>
               
        </div>
      </div>

  <br>
   
<div class="label-field-pair">
  <label for="student_grade">Last Name</label>
  <div class="col-12 col-md-6">
    <%= f.text_field :last_name,class: "form-control" %>
  </div>
</div>

<br>
      <div class="label-field-pair">
        <label for="student_grade">Religion</label>
      <div class="col-12 col-md-6">
        
        <%= f.text_field :religion,class: "form-control" %>
               
        </div>
      </div>
  <br>

       <div class="label-field-pair">
        <label for="student_grade">Date Of Birth</label>
      <div class="col-12 col-md-6">
        
        <%= f.date_field :date_of_birth,class: "datepicker form-control" %>
               
        </div>
      </div>
  <br>

         <div class="label-field-pair">
        <label for="student_grade">Gender</label>
      <div class="col-12 col-md-6">
        
           <%= f.select :gender, [["Male", "Male"], ["Female", "Female"]], {}, {class: "form-control"} %>  
        </div>
      </div>
   
    <br>
        <div class="label-field-pair">
        <label for="student_grade">Class</label>
      <div class="col-12 col-md-6">
        
             <%= f.collection_select(:class_id,@class_fields, :id , :name,{},class:"form-control") %>
        </div>
      </div>
   

    <br>
        <br>
            <br>

    <span class="span-sub-heading"><span style="font-weight: 900; font-size: 30px">PARENT DETAILS</span>
      <hr class="sub-heading">

         <div class="label-field-pair">
        <label for="student_grade">Parent Name</label>
      <div class="col-12 col-md-6">     
  
        <%= f.text_field :parent_name,class: "form-control" %>
         
        </div>
      </div>
        <br>
      <div class="label-field-pair">
        <label for="student_grade">Parent Email</label>
      <div class="col-12 col-md-6">
      
        <%= f.text_field :email,class: "form-control" %>
          
        </div>
      </div>
        <br>
      <div class="label-field-pair">
        <label for="student_grade">Parent Phone Number </label>
      <div class="col-12 col-md-6">
        
      
        <%= f.text_field :phone_number,class: "form-control" %>
        
        
        </div>
      </div>

  

<br>
<br>
        <%= f.submit "â–º Save Proceed", class: "btn btn-outline-success" %>
                          
      <% end %>

              </div>
            </div>
          </div>
              </div>

